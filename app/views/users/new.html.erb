<div class="container">

  <%= form_for @user do |f| %>

  <div class="form-group">
    <label for="user_nickname">Nickname</label>
    <input type="text" name="user[nickname]" id="user_nickname" class="form-control">
  </div>

  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="user_last_name">Last name</label>
    <input type="text" name="user[last_name]" value="<%= @user.last_name %>" id="user_last_name" class="form-control">
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="user_password">Password</label>
    <input type="Password" name="user[password]" id="user_password" class="form-control">
  </div>

  <div class="form-group">
    <label for="user_password">Password Confirmation</label>
    <input type="password" name="user[password_confirmation]" id="user_password_confirmation" class="form-control">
  </div>

  <% end %>
</div>
